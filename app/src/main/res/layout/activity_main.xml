<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/mainLayout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="0.7"
		android:gravity="center"
		android:padding="2dp">

		<ToggleButton
			android:id="@+id/turn"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:checked="true"
			android:textOff="Turn of ⭕"
			android:textOn="Turn of ❌"
			android:textSize="35sp"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:layout_weight="0.3"
		android:gravity="center">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			android:gravity="center"
			android:layout_weight="1.0">

			<LinearLayout
				android:padding="1dp"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_weight="1.0">

				<Button
					android:id="@+id/oxy0"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:onClick="oxyClick"
					android:text=""
					android:textSize="60sp"/>

			</LinearLayout>

			<LinearLayout
				android:padding="1dp"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_weight="1.0">

				<Button
					android:id="@+id/oxy1"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:onClick="oxyClick"
					android:text=""
					android:textSize="60sp"/>

			</LinearLayout>

			<LinearLayout
				android:padding="1dp"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_weight="1.0">

				<Button
					android:id="@+id/oxy2"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:onClick="oxyClick"
					android:text=""
					android:textSize="60sp"/>

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			android:gravity="center"
			android:layout_weight="1.0">

			<LinearLayout
				android:padding="1dp"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_weight="1.0">

				<Button
					android:id="@+id/oxy3"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:onClick="oxyClick"
					android:text=""
					android:textSize="60sp"/>

			</LinearLayout>

			<LinearLayout
				android:padding="1dp"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_weight="1.0">

				<Button
					android:id="@+id/oxy4"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:onClick="oxyClick"
					android:text=""
					android:textSize="60sp"/>

			</LinearLayout>

			<LinearLayout
				android:padding="1dp"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_weight="1.0">

				<Button
					android:id="@+id/oxy5"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:onClick="oxyClick"
					android:text=""
					android:textSize="60sp"/>

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			android:gravity="center"
			android:layout_weight="1.0">

			<LinearLayout
				android:padding="1dp"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_weight="1.0">

				<Button
					android:id="@+id/oxy6"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:onClick="oxyClick"
					android:text=""
					android:textSize="60sp"/>

			</LinearLayout>

			<LinearLayout
				android:padding="1dp"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_weight="1.0">

				<Button
					android:id="@+id/oxy7"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:onClick="oxyClick"
					android:text=""
					android:textSize="60sp"/>

			</LinearLayout>

			<LinearLayout
				android:padding="1dp"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_weight="1.0">

				<Button
					android:id="@+id/oxy8"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:onClick="oxyClick"
					android:text=""
					android:textSize="60sp"/>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/subLayout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_margin="5dp"
		android:orientation="horizontal"
		android:layout_weight="0.7"
		android:gravity="center">

		<LinearLayout
			android:padding="2dp"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1.0"
			android:gravity="center">

			<Button
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:onClick="onRestart"
				android:text="restart"/>

		</LinearLayout>

		<LinearLayout
			android:padding="2dp"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1.0"
			android:gravity="center">

			<Button
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:onClick="onExit"
				android:text="exit"/>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>
